<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>
  <body>
    <%- include("../partials/nav.ejs") %>

    <div class="register">
      <div>
        <h2>create user</h2>
        <a href="/auth/signin">Go To Login</a>
      </div>
      <form class="form_create_user" action="/auth" method="POST">
        <label for="username">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="username"
        />
        <label for="email">email</label>
        <input type="text" name="email" id="email" placeholder="email" />
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="password"
        />
        <select name="isAdmin" id="isAdmin">
          <option name="admin" id="admin" value="admin">admin</option>
          <option name="user" id="user" value="user">user</option>
        </select>
        <button type="submit" class="btn_create_user">Create User</button>
      </form>
    </div>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
